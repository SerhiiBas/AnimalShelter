@using AnimalShelter.Models.Animal;
@model AnimalShelter.Models.Animal.AnimalTag

@{
    ViewData["Title"] = "Add Animal Tag";
}

<h1>Add Animal Tag</h1>

<h4>Animal Tag</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddAnimalTag">
            <input asp-for="AnimalId" class="form-control" type="hidden" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <select asp-for="Name" class="form-control">
                    <option value="@(AnimalStatus.WantsToGetBetter.ToString())">@AnimalStatus.WantsToGetBetter</option>
                    <option value="@(AnimalStatus.NeedsAHome.ToString())">@AnimalStatus.NeedsAHome</option>
                    <option value="@(AnimalStatus.LookingForAnOverstay.ToString())">@AnimalStatus.LookingForAnOverstay</option>
                    <option value="@(AnimalStatus.NoParasites.ToString())">@AnimalStatus.NoParasites</option>
                    <option value="@(AnimalStatus.Sterilized.ToString())">@AnimalStatus.Sterilized</option>
                </select>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a  asp-controller="Animal" asp-action="GetAllAnimal">Back to List</a>
</div>

