@model AnimalShelter.Models.Animal.AnimalPhoto

@{
    ViewData["Title"] = "AddPhotoAnimal";
}

<h1>AddPhotoAnimal</h1>

<h4>AnimalPhoto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddPhotoAnimal" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="AnimalId" class="form-control" type="hidden"/> 
            <div class="form-group">
                <label asp-for="Photo" class="control-label"></label>
                <input asp-for="Photo" class="form-control" />
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetAllAnimal">Back to List</a>
</div>

