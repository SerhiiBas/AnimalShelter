@model IEnumerable<AnimalShelter.Models.Animal.Animal>

@{
    ViewData["Title"] = "Get All Animal";
}

<h1>Get All Animal</h1>

 <p>
    <a asp-action="AddNewAnimal">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Type Of Animal
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TypeOfAnimal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                    @Html.ActionLink("Edit", "UpdateAnimal", new { id=item.AnimalId }) |
                    @Html.ActionLink("Details", "GetAnimalById", new { id=item.AnimalId }) |
                    @Html.ActionLink("Add Photo", "AddPhotoAnimal", new { id=item.AnimalId }) |
                    @Html.ActionLink("Delete", "DeleteAnimal", new { id=item.AnimalId })
            </td>
        </tr>
}
    </tbody>
</table>
